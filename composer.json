{
  "name": "elkuku/g11n-util",
  "description": "g11n-util",
  "license": "WTFPL",
  "bin": [
    "bin/g11nutil"
  ],
  "authors": [
    {
      "name": "Nikolai Plath",
      "email": "der.el.kuku@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1.3",
    "ext-pcre": "*",
    "league/flysystem": "1.*",
    "symfony/console": "^4.1"
  },
  "require-dev": {
    "elkuku/g11n": "dev-master",
    "joomla/coding-standards": "dev-master",
    "phpunit/phpunit": "7.*",
    "twig/twig": "^2.4"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "ElKuKu\\G11nUtil\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElKuKu\\G11nUtil\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "ci": [
      "@composer validate --no-check-all --strict",
      "@phpcs",
      "@test"
    ],
    "phpcs": "vendor/bin/phpcs src tests --standard=ruleset.xml",
    "test": "vendor/bin/phpunit",

    "tpl": "./bin/g11nutil make-templates ./xtest/src xTension --package-name=G11n-test --package-version=12.3.4"
  }
}
